<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="271dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialogTitle"
        style="@style/CustomDialogStyle.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标题" />

    <TextView
        android:id="@+id/dialogContent"
        style="@style/CustomDialogStyle.Content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="内容" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_divider_height"
        android:layout_marginTop="20dp"
        android:background="@color/weike_main_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialogNegative"
            style="@style/CustomDialogStyle.Negative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="取消" />

        <View
            android:id="@+id/dialogBtnDivide"
            android:layout_width="@dimen/dialog_divider_height"
            android:layout_height="match_parent"
            android:background="@color/weike_main_divider" />

        <Button
            android:id="@+id/dialogPositive"
            style="@style/CustomDialogStyle.Positive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="确定" />
    </LinearLayout>
</LinearLayout>