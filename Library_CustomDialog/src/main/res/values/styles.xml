<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomDialogStyle1" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/style1_dialog_background</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!--必须设置该属性，才能兼容适配-->
        <item name="android:windowMinWidthMinor">@dimen/dialog_base_width</item>
    </style>

    <style name="CustomDialogStyle1.Title">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/dialog_title_marginTop</item>
        <item name="android:layout_marginStart">@dimen/dialog_base_marginLeft</item>
        <item name="android:layout_marginEnd">@dimen/dialog_base_marginRight</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/style1_text_main</item>
        <item name="android:textSize">@dimen/dialog_title_textSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomDialogStyle1.Content">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/dialog_content_marginTop</item>
        <item name="android:layout_marginStart">@dimen/dialog_base_marginLeft</item>
        <item name="android:layout_marginEnd">@dimen/dialog_base_marginRight</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">@dimen/dialog_content_lineSpacingExtra</item>
        <item name="android:textColor">@color/style1_text_second</item>
        <item name="android:textSize">@dimen/dialog_content_textSize</item>
    </style>

    <style name="CustomDialogStyle1.Divider">
        <item name="android:layout_marginTop">@dimen/dialog_divider_marginTop</item>
        <item name="android:background">@color/style1_divider_main</item>
        <item name="android:layout_height">@dimen/dialog_divider_height</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="CustomDialogStyle1.Negative">
        <item name="android:background">@null</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/style1_dialog_negative_btn_text</item>
        <item name="android:textSize">@dimen/dialog_button_textSize</item>
    </style>

    <style name="CustomDialogStyle1.Positive">
        <item name="android:background">@null</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/style1_dialog_positive_btn_text</item>
        <item name="android:textSize">@dimen/dialog_button_textSize</item>
    </style>

    <style name="CustomDialogStyle1.Input">
        <item name="android:layout_marginStart">@dimen/dialog_base_marginLeft</item>
        <item name="android:layout_marginEnd">@dimen/dialog_base_marginRight</item>
        <item name="android:background">@drawable/style1_dialog_edittext_selector</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">@dimen/dialog_input_padding</item>
        <item name="android:textColor">@color/style1_text_second</item>
        <item name="android:textColorHint">@color/style1_text_weak</item>
        <item name="android:textSize">@dimen/dialog_input_textSize</item>
    </style>
</resources>