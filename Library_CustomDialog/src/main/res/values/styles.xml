<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomDialogStyle1" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/style1_dialog_background</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="CustomDialogStyle1.Title">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/style1_text_main</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomDialogStyle1.Content">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textColor">@color/style1_text_second</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomDialogStyle1.Negative">
        <item name="android:background">@null</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/style1_dialog_negative_btn_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CustomDialogStyle1.Positive">
        <item name="android:background">@null</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/style1_dialog_positive_btn_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CustomDialogStyle1.Input">
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:background">@drawable/style1_dialog_edittext_selector</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/style1_text_second</item>
        <item name="android:textColorHint">@color/style1_text_weak</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>